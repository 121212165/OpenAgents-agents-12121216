# OpenAgents 配置
OPENAGENTS_HOST=localhost
OPENAGENTS_PORT=8000

# LLM API 配置（选择一个）
# 方案一：使用 Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Claude 模型选择
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# 方案二：使用 OpenAI
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4
# OPENAI_BASE_URL=https://api.openai.com/v1

# 虎牙直播配置（无需 API Key，使用公开接口）
HUYA_BASE_URL=https://www.huya.com

# 监控配置
POLLING_INTERVAL=300  # 轮询间隔（秒）
MAX_RETRIES=3
TIMEOUT=10

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/yougame.log

# 网络配置
NETWORK_NAME=小游探
NETWORK_VERSION=0.1.0
